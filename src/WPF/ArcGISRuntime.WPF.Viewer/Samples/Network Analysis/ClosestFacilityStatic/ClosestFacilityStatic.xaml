<UserControl x:Class="ArcGISRuntime.WPF.Samples.ClosestFacilityStatic.ClosestFacilityStatic"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
             mc:Ignorable="d">
    <Grid>
        <Grid>
            <esri:MapView x:Name="MyMapView" />
            <Border Background="WhiteSmoke" Opacity=".85" BorderBrush="Black" BorderThickness="1"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="30" Padding="20" Width="200">
                <StackPanel>
                    <Button x:Name="SolveRoutesButton"
                        HorizontalAlignment="Stretch"
                        Height="30"
                        Margin="0,5"
                        Content="Solve Routes"
                        IsEnabled="False"
                        Click="SolveRoutesClick" />
                    <Button x:Name="ResetButton"
                        HorizontalAlignment="Stretch"
                        Height="30"
                        Content="Reset"
                        IsEnabled="False"
                        Click="ResetClick" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>