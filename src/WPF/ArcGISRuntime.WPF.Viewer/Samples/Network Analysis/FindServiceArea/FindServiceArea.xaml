<UserControl x:Class="ArcGISRuntime.WPF.Samples.FindServiceArea.FindServiceArea"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013">
    <Grid>
        <esri:MapView x:Name="MyMapView" />
        <Border Background="WhiteSmoke" Opacity=".85" BorderBrush="Black" BorderThickness="1"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="30" Padding="20" Width="375">
            <StackPanel>
                <Button Name="AddFacilitiesButton"
                        Content="Add Facilities"
                        Click="AddFacilitiesButton_Click" />
                <Button Name="AddBarrierButton"
                        Content="Add Barrier"
                        Click="AddBarrierButton_Click" />
                <Button Name="ShowServiceAreas"
                        Content="Show Service Areas"
                        Click="ShowServiceAreasButton_Click" />
                <Button Name="Reset"
                        Content="Reset"
                        Click="Reset_Click" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>